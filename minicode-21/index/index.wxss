page{
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  background-color: #ccc;
}
.left,.right{
  width: 50vw;
  float: left;
}
.record{
  width: calc(50vw - 40rpx);
  overflow: hidden;
  border-radius: 20rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.left>.record{
  margin-left: 30rpx;
  float: left;
}
.right>.record{
  margin-right: 30rpx;
  float: right;
}